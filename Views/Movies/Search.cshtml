@model MovieSearchView

<form asp-action="Search" method="get">
    <input type="text" name="query" value="@Model.Query" placeholder="Search movies..." />
    <button type="submit">Search</button>
</form>

@if (Model.Results != null && Model.Results.Any())
{
    <h2>Search Results</h2>
    <ul>
        @foreach (var movie in Model.Results)
        {
            <li>@movie.Name (@movie.StartDate.Year)</li>
        }
    </ul>
}
else if (!string.IsNullOrEmpty(Model.Query))
{
    <p>No results found for "@Model.Query".</p>
}
