@model IEnumerable<TVProject.Models.CartItem>

@{
    ViewData["Title"] = "My Cart";
}

<div class="container mt-4">
    <h1 class="mb-4">My Cart</h1>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Movie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Quantity)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie.Name)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="Index" asp-controller="Movies" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Continue Shopping
        </a>
        <a asp-action="ProceedToOrder" asp-controller="Cart" class="btn btn-primary ms-2">
            <i class="fas fa-credit-card"></i> Proceed to Order
        </a>
    </div>
</div>
