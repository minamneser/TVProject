@model TVProject.Models.Actor

@{
    ViewData["Title"] = "Create Actor";
}

<h1 class="text-center">Create New Actor</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title text-center">Actor Details</h4>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="ProfilePicUrl" class="form-control" placeholder="Profile Picture URL" />
                        <label asp-for="ProfilePicUrl">Profile Picture URL</label>
                        <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                        <label asp-for="FullName">Full Name</label>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Bio" class="form-control" placeholder="Biography" style="height: 100px"></textarea>
                        <label asp-for="Bio">Biography</label>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Create</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a class="btn btn-link" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
