@model IEnumerable<TVProject.Models.Order>

<h1>Orders</h1>

<div class="container mt-4">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToShortDateString()</td>
                        <td>@order.TotalPrice.ToString("C")</td>                        
                    </tr>
                }               
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No orders found.</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="ReturnToCart" asp-controller="Order" class="btn btn-secondary btn-sm">
        <i class="fas fa-shopping-cart"></i> Return to Cart
    </a>
    <a asp-action="OrderConfirmation" asp-controller="Order" class="btn btn-primary btn-sm">
         Place Order
    </a>
</div>
